<div class="large-4 columns item blog-list-item">
    <article id="post-{{post.ID}}" class="post-{{post.ID}} post type-post status-publish format-standard hentry category-uncategorized cf" role="article">

        <p class="display-date">{{post.display_date}}</p>

        <h2 class="h5 entry-title"><a href="{{post.get_path}}" rel="bookmark" title="{{post.post_title}}">{{post.post_title}}</a></h2>

        {#<p class="author">{{post.author}}</p>#}

        {% if post.get_field('author') %}
          <p class="author">{{post.get_field('author')}}</p>
        {% endif %}

        {% if post.get_field('featured_image') %}
          <a href="{{post.get_path}}" rel="bookmark" title="{{post.post_title}}">
            <img src="{{post.get_field('featured_image')}}" alt="post image">
          </a>
        {% endif %}


        <section class="cf post-summary">

          {% if post.get_field('teaser_text') %}
            <p>
            {{post.get_field('teaser_text')}}
            <a href="{{post.get_path}}" rel="bookmark" title="{{post.post_title}}"><em>read more</em></a>
            </p>
          {% endif %}

        </section>

        {% for category in post.terms('category') %}
            {% if category.name != 'Uncategorized' %}
                <a href="{{category.link}}" class="category-tag">{{ category.name }}</a>
            {% endif %}
        {% endfor %}

    </article>
</div>
