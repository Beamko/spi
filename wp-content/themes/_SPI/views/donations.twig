{% extends "base.twig" %}

{% block content %}

<article id="post-{{post.ID}}" role="article" itemscope itemtype="http://schema.org/BlogPosting">

    <header class="row">

        <h1 class="page-title large-8 column large-centered small-centered dontations-header">{{post.get_field('donations_page_title')}}</h1>

    </header>

    <section class="donation-form-section">
        <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
            <input type="hidden" name="cmd" value="_s-xclick">
            <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----
            ">
            <input type="submit" border="0" name="submit" class="link" value="Send Donation">
            <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
        </form>

    </section>

    <section class="primary-about-sections entry-content cf" itemprop="articleBody">
        <div class="about-section">
            <article>
                <section class="article-content">
                    <h2 class="article-h1">{{post.get_field('donations_description_header')}}</h2>
                    <div class="article-body">
                        {{post.get_field('donations_description')}}
                    </div>
                </section>

            </article>
        </div>

    </section>

</article>

{% endblock %}
