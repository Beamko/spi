<div id="{{post.title}}" class="resource-section">
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <h2>{{post.title}}</h2>
        <div class="js-isotope" role="main">
        {% for item in post.get_field('library_sub_section') %}
        
            <div class="large-4 medium-6 column item">
                <h3>{{item.sub_section_title}}</h3>
                <ul>
                {% for resource in item.resources %}
                    <li>
                        <span class="resource">
                            {% if resource.resource_type == "document" %}
                                
                                <a href="{{resource.document}}" target="_blank"><i class="icon-doc"></i>{{resource.document_title}}</a>
                            {% endif %}
                            {% if resource.resource_type == "link" %}
                                
                                <a href="{{resource.link_url}}" target="_blank"><i class="icon-link"></i>{{resource.link_title}}</a>
                            {% endif %} 
                        </span>
                    </li>
                {% endfor %}
                </ul>
            </div>
        
        {% endfor %}
        </div>
        
    </article>
</div>